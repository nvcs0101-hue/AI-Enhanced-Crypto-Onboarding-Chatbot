# Staging Environment Configuration
# Copy this file to .env for staging deployment

# Environment
FLASK_ENV=staging
FLASK_DEBUG=false
ENVIRONMENT=staging

# Security
SECRET_KEY=your_secret_key_for_staging_change_this

# LLM API Keys
OPENAI_API_KEY=your_openai_key_here
GOOGLE_API_KEY=your_gemini_key_here
PERPLEXITY_API_KEY=your_perplexity_key_here

# Database
CHROMA_PERSIST_DIRECTORY=/app/data/chroma_db
POSTGRES_URL=postgresql://postgres:postgres@postgres:5432/chatbot_staging

# Caching
REDIS_URL=redis://redis:6379

# Bot Tokens (Staging - separate from production)
TELEGRAM_BOT_TOKEN_STAGING=your_staging_telegram_bot_token
DISCORD_BOT_TOKEN_STAGING=your_staging_discord_bot_token

# Monitoring & Error Tracking
SENTRY_DSN=your_sentry_dsn_for_staging
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting (more lenient for staging)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_DB=postgres

# Backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
S3_BUCKET=your-staging-backups-bucket
RETENTION_DAYS=7

# Feature Flags (for testing)
FEATURE_MULTI_LLM_ROUTING=true
FEATURE_CONVERSATION_MEMORY=true
FEATURE_RESPONSE_VALIDATION=true
FEATURE_USAGE_TRACKING=true
FEATURE_PRIVACY_COMPLIANCE=true
FEATURE_CACHING=true

# CORS (allow staging frontend)
CORS_ORIGINS=https://staging.yourdomain.com,http://localhost:3000

# External Services
CLOUDFLARE_API_TOKEN=your_cloudflare_token
DATADOG_API_KEY=your_datadog_key
