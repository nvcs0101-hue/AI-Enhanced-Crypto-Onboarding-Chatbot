# Environment Configuration for AI-Enhanced Crypto Onboarding Chatbot

# ============================================
# API Keys (REQUIRED)
# ============================================

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Key - Get from https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Perplexity API Key - Get from https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ============================================
# Bot Tokens (REQUIRED for bot deployments)
# ============================================

# Telegram Bot Token - Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Discord Bot Token - Get from Discord Developer Portal
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Discord Public Key (for interactions verification)
DISCORD_PUBLIC_KEY=eae540fb77348190137db72ff86a91a3a2de107877734d6bb871939696ffc405

# ============================================
# Flask Configuration
# ============================================

# Flask server settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex())")
FLASK_SECRET_KEY=your_secret_key_here

# ============================================
# Database Configuration (Optional)
# ============================================

# PostgreSQL connection string for analytics
# DATABASE_URL=postgresql://user:password@localhost:5432/crypto_chatbot

# ============================================
# Redis Configuration (Optional)
# ============================================

# Redis URL for caching and rate limiting
# REDIS_URL=redis://localhost:6379/0

# ============================================
# RAG Configuration
# ============================================

# Vector database directory
CHROMA_DB_PATH=./chroma_db

# Documents directory
DOCS_DIRECTORY=./data/docs

# Embedding model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# LLM Configuration
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.3
RETRIEVAL_K=4

# ============================================
# Logging
# ============================================

LOG_LEVEL=INFO
LOG_FILE=./logs/chatbot.log

# ============================================
# CORS Configuration
# ============================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================
# Rate Limiting
# ============================================

# Rate limit: requests per minute
RATE_LIMIT_PER_MINUTE=20

# ============================================
# Deployment Settings
# ============================================

# Production mode
PRODUCTION=False

# Webhook URL for Telegram (if using webhooks instead of polling)
# TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram-webhook
